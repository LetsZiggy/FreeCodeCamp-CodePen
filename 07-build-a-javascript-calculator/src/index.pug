.wrapper
  .calculator
    .memories
      .button.forget(onmousedown="handleMouseDown('MC')" title="Clear Memory | Keyboard: 'i'") MC
      .button.memorysubtract(onmousedown="handleMouseDown('M-')" title="Subtract output from Memory | Keyboard: 'o'") M-
      .button.memoryadd(onmousedown="handleMouseDown('M+')" title="Add output to Memory | Keyboard: 'p'") M+
      .button.remember(onmousedown="handleMouseDown('MS')" title="Store output to Memory | Keyboard: '['") MS
      select#select.memory-list(title="Keyboard: 'a' or 'b' or 'c' or 'd' or 'e'")
        option(value="0" label="No Memory Selected" selected)
        option(value="0" label="A = 0")
        option(value="0" label="B = 0")
        option(value="0" label="C = 0")
        option(value="0" label="D = 0")
        option(value="0" label="E = 0")
      .button.use(onmousedown="handleMouseDown('MR')" title="Apply Memory | Keyboard: ']'") MR

    .separator

    .numpad
      .button.divide(onmousedown="handleMouseDown('/')" title="Keyboard: '/' or '\\'") /
      .button.multiply(onmousedown="handleMouseDown('*')" title="Keyboard: '*'") *
      .button.subtract(onmousedown="handleMouseDown('-')" title="Keyboard: '-'") -
      .button.add(onmousedown="handleMouseDown('+')" title="Keyboard: '+'") +
      .button.nine(onmousedown="handleMouseDown(9)" title="Keyboard: '9'") 9
      .button.eight(onmousedown="handleMouseDown(8)" title="Keyboard: '8'") 8
      .button.seven(onmousedown="handleMouseDown(7)" title="Keyboard: '7'") 7
      .button.six(onmousedown="handleMouseDown(6)" title="Keyboard: '6'") 6
      .button.five(onmousedown="handleMouseDown(5)" title="Keyboard: '5'") 5
      .button.four(onmousedown="handleMouseDown(4)" title="Keyboard: '4'") 4
      .button.three(onmousedown="handleMouseDown(3)" title="Keyboard: '3'") 3
      .button.two(onmousedown="handleMouseDown(2)" title="Keyboard: '2'") 2
      .button.one(onmousedown="handleMouseDown(1)" title="Keyboard: '1'") 1
      .button.zero(onmousedown="handleMouseDown(0)" title="Keyboard: '0'") 0
      .button.dot(onmousedown="handleMouseDown('.')" title="Keyboard: '.'") .
      .button.clear(onmousedown="handleMouseDown('Clear')" title="Keyboard: 'Backspace' or 'Delete'") Clear
      .button.equals(onmousedown="handleMouseDown('=')" title="Keyboard: 'Enter' or '='") =

  .display
    .user-input
      span#user-input
      span#blinking.blinking _
      div
        span User Input
        span &lt; keyboard input possible / mouse over to see the key(s) &gt;

    .separator

    .output
      span#user-output
      span Output

